# =============================================================================
# YouTuber Studio Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Supabase
# Get these from: https://app.supabase.com/project/_/settings/api
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-or-anon-key

# Service role key (server-side only - NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Webhook secret for Supabase database webhooks (optional)
SUPABASE_WEBHOOK_SECRET=your-webhook-secret

# -----------------------------------------------------------------------------
# Stripe
# Get these from: https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
# Publishable key (safe for client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Secret key (server-side only)
STRIPE_SECRET_KEY=sk_test_xxx

# Webhook signing secret
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Price IDs for subscription plans
# Create these in: https://dashboard.stripe.com/products
STRIPE_CREATOR_MONTHLY_PRICE_ID=price_xxx
STRIPE_CREATOR_YEARLY_PRICE_ID=price_xxx
STRIPE_STUDIO_MONTHLY_PRICE_ID=price_xxx
STRIPE_STUDIO_YEARLY_PRICE_ID=price_xxx

# -----------------------------------------------------------------------------
# Optional: Analytics & Monitoring
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_POSTHOG_KEY=
# NEXT_PUBLIC_POSTHOG_HOST=

# -----------------------------------------------------------------------------
# Optional: YouTube API (for channel integration)
# -----------------------------------------------------------------------------
# YOUTUBE_API_KEY=
# YOUTUBE_CLIENT_ID=
# YOUTUBE_CLIENT_SECRET=
